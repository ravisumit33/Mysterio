{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "*": ["./*", "../node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
